<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800" prefWidth="1200" style="-fx-background-color: #a1b8c4;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="juego.app.EightOffController">

    <top>
        <VBox>
            <ToolBar>
                <Button onAction="#onNuevoJuego" style="-fx-background-radius: 10;" text="Nuevo Juego" />
                <Button fx:id="btnVerHistorial" onAction="#onVerHistorial" style="-fx-background-radius: 10;" text="Ver Historial" />
                <Button fx:id="btnDeshacer" onAction="#onDeshacer" style="-fx-background-radius: 10;" text="Deshacer" />
                <Button fx:id="btnPista" onAction="#onPista" style="-fx-background-radius: 10;" text="Pista" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="labelMovimientos" style="-fx-padding: 5 10 5 10; -fx-background-radius: 5;" text="Movimientos: 0">
                    <font><Font size="13.0" /></font>
                </Label>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <StackPane>
            <VBox spacing="20" style="-fx-background-color: transparent;">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="20" />
                </padding>

                <HBox alignment="CENTER" spacing="30" style="-fx-background-color: transparent; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>

                    <VBox alignment="CENTER" prefHeight="50.0" prefWidth="998.0" spacing="8">
                        <HBox fx:id="hboxCeldasLibres" alignment="CENTER" spacing="8" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-padding: 10;" />
                    </VBox>
                </HBox>

                <VBox spacing="8" VBox.vgrow="ALWAYS">
                    <ScrollPane fitToHeight="false" fitToWidth="true" hbarPolicy="AS_NEEDED" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                        <HBox fx:id="hboxTableau" alignment="TOP_CENTER" minHeight="400" minWidth="1000" spacing="10" style="-fx-background-color: transparent; -fx-background-radius: 8;">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                        </HBox>
                    </ScrollPane>
                </VBox>
            </VBox>

            <StackPane fx:id="overlayPanel" style="-fx-background-color: rgba(0,0,0,0.5);" visible="false">
                <VBox fx:id="panelHistorial" alignment="CENTER" spacing="10" style="-fx-background-color: rgba(0,0,0,0.4); -fx-padding: 20; -fx-border-color: #666; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10;">
                    <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;" text="Pantalla de Historial" />
                    <Label fx:id="labelInfoHistorial" style="-fx-text-fill: white; -fx-font-size: 14;" text="Historial: 0/0" />

                    <HBox alignment="CENTER" spacing="5">
                        <Button fx:id="btnPrimero" onAction="#onPrimeroHistorial" style="-fx-font-size: 12; -fx-padding: 5 10 5 10; -fx-background-radius: 5;" text="Ir al Primero" />
                        <Button fx:id="btnAnterior" onAction="#onAnteriorHistorial" style="-fx-font-size: 12; -fx-padding: 5 10 5 10; -fx-background-radius: 5;" text="Undo" />
                        <Button fx:id="btnSiguiente" onAction="#onSiguienteHistorial" style="-fx-font-size: 12; -fx-padding: 5 10 5 10; -fx-background-radius: 5;" text="Redo" />
                        <Button fx:id="btnUltimo" onAction="#onUltimoHistorial" style="-fx-font-size: 12; -fx-padding: 5 10 5 10; -fx-background-radius: 5;" text="Ir al Ãšltimo" />
                    </HBox>

                    <HBox alignment="CENTER" spacing="5">
                        <Button fx:id="btnAplicarEstado" onAction="#onAplicarEstadoHistorial" style="-fx-font-size: 12; -fx-padding: 5 10 5 10; -fx-background-radius: 5;" text="Aplicar" />
                        <Button fx:id="btnCancelarVisualizacion" onAction="#onCancelarVisualizacion" style="-fx-font-size: 12; -fx-padding: 5 10 5 10; -fx-background-radius: 5;" text="Cancelar" />
                    </HBox>
                </VBox>
            </StackPane>
        </StackPane>
    </center>

    <bottom>
        <VBox style="-fx-background-color: orange;">
            <HBox alignment="CENTER_LEFT" prefHeight="5.0" prefWidth="1200.0" spacing="15">
                <padding>
                    <Insets bottom="8" left="15" right="15" top="8" />
                </padding>
            </HBox>
        </VBox>
    </bottom>

    <left>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" spacing="8">
                    <VBox fx:id="vboxFundaciones" alignment="CENTER" prefHeight="692.0" prefWidth="100.0" spacing="8" style="-fx-background-color: transparent; -fx-background-radius: 8; -fx-padding: 10;" />
                </VBox>
            </children>
        </VBox>
    </left>
</BorderPane>
